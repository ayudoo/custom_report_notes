<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.custom_report_notes</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath
        expr="//setting[@id='document_layout_setting']//div[hasclass('content-group')]"
        position="inside">
        <br groups="base.group_no_one"/>
        <button
          name="%(custom_report_notes.action_custom_report_note)d"
          string="Custom Report Notes"
          type="action"
          class="oe_link"
          groups="base.group_no_one"
          icon="oi-arrow-right"/>
      </xpath>
    </field>
  </record>

</odoo>
