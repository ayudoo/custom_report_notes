<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.ayu_product_data</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath
        expr="//div[@id='company_details_settings']//div[hasclass('o_setting_right_pane')]//div[hasclass('content-group')]"
        position="inside">
        <button
          name="%(custom_report_notes.action_custom_report_note)d"
          string="Custom Report Notes"
          type="action"
          class="oe_link"/>
      </xpath>
    </field>
  </record>

</odoo>
